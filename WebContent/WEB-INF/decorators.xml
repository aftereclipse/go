<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/jsp/templates">
	<!-- 排除 -->
	<excludes>
		<pattern>*/ajax*</pattern>
	</excludes>

	<!-- 登录模板页 -->
	<decorator name="login" page="login.jsp">
		<pattern>*/global/viewLogin*</pattern>
		<pattern>*/global/login*</pattern>
		<pattern>*/global/logout*</pattern>
	</decorator>

	<!-- 前台模板页 -->
	<decorator name="front" page="front.jsp">
		<pattern>/global/*</pattern>
	</decorator>

	<!-- 管理员模板页 -->
	<decorator name="manager" page="manager.jsp">
		<pattern>/manager/*</pattern>
	</decorator>

</decorators>